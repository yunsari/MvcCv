@using MvcCv.Models.Entity
@model List<Tbliletisim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12 pt-5">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content">

                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <a href="$" class="btn btn-danger">@(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))</a>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="fa fa-mail-bulk" style="margin-right: 5px"></i>@item.Mail</span>
                                                <h3 class="timeline-header"><a href="$" style="text-decoration: none; color:cadetblue; margin-right: 15px">@item.Adsoyad</a> @item.Konu</h3>
                                                <div class="timeline-body">
                                                    @item.Mesaj
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
    </section>
</body>
</html>